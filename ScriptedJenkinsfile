node("agent"){
    stage("Git clone"){
        git 'https://github.com/InfernoFeniks/ansible-vector.git'
    }
    stage("Set var prod_run"){
        if(env.IS_PROD){
            prod_run=true
        } else {
            prod_run=false
        }
    }
    stage("Run ansible playbook"){
        if (prod_run){
            sh 'ansible-playbook site.yml -i inventory/prod.yaml'
        }
        else{
            sh 'ansible-playbook site.yml -i inventory/prod.yaml --check --diff'
        }
    }
}
